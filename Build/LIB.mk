# Library Directories

# DGOS library paths defined here, use these for compiling applicaitons and used for library building as destination folders
DGOSRTOS_LIBCOMPILEDDIR=$(DGOSLIBROOTDIR)$(KERNELNAME)$(KERNELVERSION)\\$(COMPILER)$(COMPVER)\\
DGOSRTOS_COMMONDIR=$(DGOSRTOS_LIBCOMPILEDDIR)BSP\\RTOS\\$(INNEROS)\\
DGOSRTOS_STUBDIR=$(DGOSRTOS_LIBCOMPILEDDIR)BSP\\RTOS\\$(INNEROS)\\$(UPROCESSOR)\\$(UPARCHITECTURE)\\
DGOSRTOS_SDKDIR=$(DGOSRTOS_LIBCOMPILEDDIR)BSP\\RTOS\\$(INNEROS)\\$(UPROCESSOR)\\SDK\\
DGOSRTOS_OALDIR=$(DGOSRTOS_LIBCOMPILEDDIR)BSP\\OAL\\
DGOSRTOS_HALDIR=$(DGOSRTOS_LIBCOMPILEDDIR)BSP\\HAL\\
DGOSRTOS_PFDIR=$(DGOSRTOS_LIBCOMPILEDDIR)PF\\$(PLATFORM)\\$(UPROCESSOR)\\
DGOSRTOS_FWDIR=$(DGOSRTOS_LIBCOMPILEDDIR)FW\\

DGOSARCHIVE=$(DGOSRTOS_COMMONDIR)$(KERNELNAME)_$(INNEROS).a
DGOSSTUBARCHIVE=$(DGOSRTOS_STUBDIR)$(KERNELNAME)_$(INNEROS)_Stub.a
DGOSOALARCHIVE=$(DGOSRTOS_OALDIR)OAL_$(UPROCESSOR).a
DGOSFWARCHIVE=$(DGOSRTOS_FWDIR)Framework_$(UPROCESSOR).a
DGOSPFARCHIVE=$(DGOSRTOS_PFDIR)Platform_$(PLATFORM)_$(UPROCESSOR).a

# includes for application compilation 
# free for any referece to special SDK libraries
APPLINCLUDES=$(DGOSRTOS_PFDIR)
APPLINCLUDES=$(DGOSRTOS_FWDIR)
APPLINCLUDES+=$(DGOSRTOS_OALDIR)
APPLINCLUDES+=$(DGOSRTOS_COMMONDIR)
APPLINCLUDES+=$(DGOSRTOS_STUBDIR)
APPINCLUDE=$(addprefix -I ,$(APPLINCLUDES))

# SDK for building applicaitons
# DGS selected chip LPC4357 ( $(UPROCESSOR) )
ifeq ($(UPROCESSOR),LPC4357)
SDKLINCLUDES=$(DGOSRTOS_SDKDIR)LPC43xx_18xx\\chip_43xx_18xx\\config_43xx\\
SDKLINCLUDES+=$(DGOSRTOS_SDKDIR)LPC43xx_18xx\\brd_mcb4357\\inc\\
SDKLINCLUDES+=$(DGOSRTOS_SDKDIR)LPC43xx_18xx\\brd_mcb4357\\src\\
SDKLINCLUDES+=$(DGOSRTOS_SDKDIR)LPC43xx_18xx\\chip_43xx_18xx\\inc\\

SDKINCLUDE=$(addprefix -I ,$(SDKLINCLUDES))
SDKLINKLIB=

else ifeq ($(UPROCESSOR),LPC54608)
SDKLINCLUDES=$(DGOSRTOS_SDKDIR)ide_tools\\tools\\features\\include\\
SDKLINCLUDES+=$(DGOSRTOS_SDKDIR)board\\
SDKLINCLUDES+=$(DGOSRTOS_SDKDIR)drivers\\
SDKLINCLUDES+=$(DGOSRTOS_SDKDIR)CMSIS\\

SDKLINKLIBS=$(DGOSRTOS_SDKDIR)ide_tools\\tools\\arm-none-eabi\\lib\\thumb\\v7e-m\\fpv4-sp\\hard\\
SDKLINKLIBS+=$(DGOSRTOS_SDKDIR)ide_tools\\tools\\lib\\gcc\\arm-none-eabi\\6.3.1\\thumb\\v7e-m\\fpv4-sp\\hard\\

SDKINCLUDE=$(addprefix -I ,$(SDKLINCLUDES))
SDKLINKLIB=$(addprefix -L ,$(SDKLINKLIBS))

endif

